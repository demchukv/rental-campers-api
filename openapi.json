{
  "openapi": "3.0.3",
  "info": {
    "title": "Rental campers - OpenAPI 3.0",
    "description": "The simple REST API for testing app",
    "contact": {
      "email": "demchukv@gmail.com"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "View example app",
    "url": "https://rental-campers.vercel.app/"
  },
  "servers": [
    {
      "url": "https://rental-campers-api.onrender.com/api"
    }
  ],
  "tags": [
    {
      "name": "campers",
      "description": "get filtered list of campers for rental"
    }
  ],
  "paths": {
    "/campers": {
      "get": {
        "tags": [
          "advert"
        ],
        "summary": "Get list of campers",
        "description": "Get list of campers",
        "operationId": "getCampers",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "the number of page to select from collection",
            "default": 1
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "the number of records to return",
            "default": 10
          },
          {
            "in": "query",
            "name": "location",
            "schema": {
              "type": "string"
            },
            "description": "the city name for filter records",
            "default": "",
            "example": "Lviv"
          },
          {
            "in": "query",
            "name": "form",
            "schema": {
              "type": "string"
            },
            "description": "the form of vehicle",
            "default": "",
            "example": "alcove"
          },
          {
            "in": "query",
            "name": "details_airConditioner",
            "schema": {
              "type": "string"
            },
            "description": "is air conditioner?",
            "default": "",
            "example": "true"
          },
          {
            "in": "query",
            "name": "transmission",
            "schema": {
              "type": "string"
            },
            "description": "what transmission?",
            "default": "",
            "example": "automatic"
          },
          {
            "in": "query",
            "name": "details_kitchen",
            "schema": {
              "type": "string"
            },
            "description": "is kitchen?",
            "default": "",
            "example": "true"
          },
          {
            "in": "query",
            "name": "details_shower",
            "schema": {
              "type": "string"
            },
            "description": "is shower?",
            "default": "",
            "example": "true"
          },
          {
            "in": "query",
            "name": "details_TV",
            "schema": {
              "type": "string"
            },
            "description": "is TV?",
            "default": "",
            "example": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}